@page
@model HelpDesk.Pages.Admin.Priorities.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

 <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Prioridad</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Priority.Name)
            </dd>
            <dt class="col-sm-2">
               Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Priority.Description)
            </dd>
        </dl>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Priority.PriorityId">Editar</a> |
            <a asp-page="./Index">Regresar a la lista</a>
        </div>
    </div>
</div>

