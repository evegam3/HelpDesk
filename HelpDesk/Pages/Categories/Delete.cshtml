@page
@model HelpDesk.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Categoría</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class="col-sm-2">
               Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Description)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Category.CategoryId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-page="./Index">Regresar a la lista</a>
        </form>
    </div>
</div>
