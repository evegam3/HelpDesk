@page
@model HelpDesk.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Detalles</h1>

 <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Categoría</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt class="col-sm-2">
               Descripción
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Description)
            </dd>
        </dl>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId">Editar</a> |
            <a asp-page="./Index">Regresar a la lista</a>
        </div>
    </div>
</div>