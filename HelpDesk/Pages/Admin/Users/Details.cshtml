@page
@model HelpDesk.Pages.Admin.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Usuario</h6>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                   Nombre
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Name)
                </dd>
                <dt class="col-sm-2">
                     Apellido
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.Lastname)
                </dd>
                <dt class="col-sm-2">
                    Usuario
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.User.Id">Editar</a> |
            <a asp-page="./Index">Regresar a la lista</a>
        </div>
    </div>
</div>