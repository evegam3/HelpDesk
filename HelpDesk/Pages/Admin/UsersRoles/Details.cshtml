@page
@model HelpDesk.Pages.Admin.UsersRoles.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Rol de Usuario</h6>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                   Usuario
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserRole.User.UserName)
                </dd>
                <dt class="col-sm-2">
                    Rol
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserRole.Role.Name)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Index">Regresar a la lista</a>
        </div>
    </div>
</div>