@page
@model HelpDesk.Pages.Admin.UsersRoles.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
 <div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Rol</h6>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Usuario
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserRole.User.UserName)
                </dd>
                <dt class="col-sm-2">
                    Rol
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserRole.Role.Name)
                </dd>
            </dl>
    
            <form method="post">
                <input type="hidden" asp-for="UserRole.UserId" />
                <input type="hidden" asp-for="UserRole.RoleId" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-page="./Index">Regresar a la lista</a>
            </form>
        </div>
    </div>
</div>
