@page
@model HelpDesk.Pages.Admin.UsersRoles.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>UserRole</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRole.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRole.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRole.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRole.Role.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UserRole.UserId" />
        <input type="hidden" asp-for="UserRole.RoleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Regresar a la lista</a>
    </form>
</div>
