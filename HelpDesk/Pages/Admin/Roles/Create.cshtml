@page
@model HelpDesk.Pages.Admin.Roles.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Agregar nuevo</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Rol</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Rol.Id" class="control-label"></label>
                        <input asp-for="Rol.Id" class="form-control" />
                        <span asp-validation-for="Rol.Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input asp-for="Rol.Name" class="form-control" />
                        <span asp-validation-for="Rol.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nombre Normalizado</label>
                        <input asp-for="Rol.NormalizedName" class="form-control" />
                        <span asp-validation-for="Rol.NormalizedName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Sello de Concurrencia</label>
                        <input asp-for="Rol.ConcurrencyStamp" class="form-control" />
                        <span asp-validation-for="Rol.ConcurrencyStamp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Regresar a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
